{
    "name": "typedoc-plugin-replace-in-comments",
    "version": "3.0.0",
    "description": "Plugin for TypeDoc that replaces text in comments",
    "author": {
        "name": "Kriszti√°n Balla",
        "url": "https://github.com/krisztianb"
    },
    "license": "ISC",
    "keywords": [
        "typedocplugin"
    ],
    "devDependencies": {
        "@types/node": "14.14.27",
        "@typescript-eslint/eslint-plugin": "4.31.2",
        "@typescript-eslint/parser": "4.31.2",
        "eslint": "7.32.0",
        "eslint-plugin-jsdoc": "36.1.0",
        "eslint-plugin-ordered-imports": "0.5.0",
        "eslint-plugin-unicorn": "36.0.0",
        "husky": "4.3.8",
        "prettier": "2.4.1",
        "rimraf": "3.0.2",
        "typedoc": "0.22.4",
        "typescript": "4.4.3"
    },
    "peerDependencies": {
        "typedoc": "0.21.x || 0.22.x"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/krisztianb/typedoc-plugin-replace-in-comments.git"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint && npm run format"
        }
    },
    "main": "dist/index.js",
    "files": [
        "/dist"
    ],
    "scripts": {
        "lint": "npx eslint ./src",
        "format": "npx prettier --check ./src",
        "clean": "rimraf dist",
        "build": "npx tsc",
        "clean-build": "npm run clean && npm run build"
    }
}
